<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.abt.activity">

    <!--获取Activity任务栈权限-->
    <uses-permission android:name="android.permission.GET_TASKS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:name=".SampleApp"
        android:theme="@style/AppTheme">

        <activity android:name=".static_variable.activity.ActivityO"
            android:launchMode="singleInstance"
            android:configChanges="orientation|screenSize">
        </activity>

        <activity android:name=".static_variable.activity.ActivityP"
            android:launchMode="singleInstance"
            android:configChanges="orientation|screenSize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <activity android:name=".static_variable.activity.ActivityQ"
            android:launchMode="singleInstance"
            android:configChanges="orientation|screenSize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <activity android:name=".static_variable.leak.LeakedActivity" />

        <activity android:name=".activity_jump.ActivityA" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity_jump.ActivityB" />
        <activity android:name=".activity_jump.ActivityC" />
        <activity android:name=".activity_jump.ActivityD" />
    </application>

</manifest>
